
<%=form_for(@post) do |f|%>
<div id="post">
	<% if @post.errors.any? %>
		<div id="errorExplanation">
			<h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
			<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
  <% end %>
  
	<div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :maxlength=>100 %>
  </div>
  
  <div class="field">
    <%= f.label :slug %><br />
    <%= f.text_field :slug, :maxlength=>50%>
  </div>
  
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  
  <div class="field">
		<%= f.check_box :published%> <%= f.label :published%>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<%end%>
